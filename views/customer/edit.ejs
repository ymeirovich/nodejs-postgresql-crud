<%- include ../layouts/header.ejs %>
    <div class="page-data">
        <form method="post" action="/customers/edit/<%=data[0].customer_id%>">
            <table cellpadding="11">
                <tr>
                    <td class="label">First Name</td>
                    <td><input type="text" name="first_name" value="<%=data[0].first_name%>" required /></td>
                </tr>
                <tr>
                    <td class="label">Last Name</td>
                    <td><input type="text" name="last_name" value="<%=data[0].last_name%>" required /></td>
                </tr>
                <tr>
                    <td class="label">Address</td>
                    <!-- <%=data[0].address_id%> -->
                    <td><textarea name="address_id" required cols="30" rows="5">530</textarea></td>
                </tr>
                <tr>
                    <td class="label">Email</td>
                    <td><input type="text" value="<%=data[0].email%>" name="email" required /></td>
                </tr>
                <!-- <tr>
                    <td class="label">Phone</td>
                    <td><input type="text" name="phone" value="<%=data[0].phone%>" required /></td>
                </tr> -->
                <tr>
                    <td class="label"></td>
                    <td>
                        <button type="submit">Save</button>
                        <button type="button" onClick="cancelAdd()">Cancel</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <%- include ../layouts/footer.ejs %>